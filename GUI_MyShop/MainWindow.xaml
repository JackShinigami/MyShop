<Fluent:RibbonWindow
    xmlns:Fluent="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    x:Class="GUI_MyShop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GUI_MyShop"
    xmlns:conv="clr-namespace:BUS_MyShop;assembly=BUS_MyShop"
    mc:Ignorable="d"
    Title="MainWindow"
    Loaded="Window_Loaded"
    Height="675"
    Width="1200">
    <Grid>

        <TextBox
            x:Name="textBox1"
            HorizontalAlignment="Center"
            Height="31"
            Margin="0,110,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Style="{DynamicResource SpecialFocusValidatingTextBox}"
            Width="160">
            <TextBox.Text>
                <Binding
                    Path="Text"
                    UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <conv:EmptyInputRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBox
            x:Name="textBox2"
            HorizontalAlignment="Center"
            Height="31"
            Margin="0,153,0,0"
            TextWrapping="Wrap"
            Text="TextBox"
            VerticalAlignment="Top"
            Style="{DynamicResource SpecialFocusTextBox}"
            Width="160" />

        <Button
            x:Name="testButton"
            Content="Test Hover"
            FontSize="30"
            Style="{DynamicResource BorderGradientButton}"
            Margin="320,262,316,89"
            Click="testButton_Click">

        </Button>




        <!---->
    </Grid>

</Fluent:RibbonWindow>
